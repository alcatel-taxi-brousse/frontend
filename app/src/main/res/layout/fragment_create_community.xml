<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateCommunityFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextCommunityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="CommunityName" />

    <EditText
        android:id="@+id/editTextDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Destination" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description" />

    <EditText
        android:id="@+id/editTextVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Visbility" />

    <Button
        android:id="@+id/ButtonCreateCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ButtonCreateCommunity" />

</LinearLayout>