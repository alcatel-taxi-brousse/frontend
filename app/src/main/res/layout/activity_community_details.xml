<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewCommunityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp" />

    <FrameLayout
        android:id="@+id/frameLayoutFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
         />

    <Button
        android:id="@+id/buttonProposeRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/propose_ride"
        android:layout_marginTop="16dp" />

    <FrameLayout
        android:id="@+id/frameLayoutRidesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/buttonProposeRide" />

</LinearLayout>
